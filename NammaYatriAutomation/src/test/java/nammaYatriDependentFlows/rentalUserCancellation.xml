<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="RentalUserCancellation">
	<parameter name="flowOption" value="3"></parameter>

	<!-- DriverLogin -->
	<test name="DriverLogin">
		<groups>
			<define name="driverLogin" />
		</groups>
		<classes>
			<class name="Driver.DriverLoginFlow">
				<methods>
					<include name="successfulDriverLogin" />
				</methods>
			</class>
		</classes>
	</test>

	<!-- UserLogin -->
	<test name="UserLogin">
		<classes>
			<class name="User.Android.UserLoginFlow">
				<methods>
					<include name="successfulUserLogin" />
				</methods>
			</class>
		</classes>
	</test>

	<test name="Searching for the Rental Ride">
		<classes>
			<class name="User.Android.RentalRideSearch">
				<methods>
					<include name="rideSearchWithoutAddingStop"></include>
				</methods>
			</class>
		</classes>
	</test>

	<test name="Confirming the Quotes">
		<classes>
			<class name="User.Android.QuotesScreen">
				<methods>
					<include name="selectingAutoQuote"></include>
				</methods>
			</class>
		</classes>
	</test>

	<test name="Accepting the RideRequest">
		<classes>
			<class name="Driver.PopUpScreen">
				<methods>
					<include name="acceptOffer"></include>
				</methods>
			</class>
		</classes>
	</test>

	<test name="Cancelling the RentalRide">
		<classes>
			<class name="User.Android.RentalUserCancellation">
				<methods>
					<include name="rentalUserCancellation"></include>
				</methods>
			</class>
		</classes>
	</test>


</suite>